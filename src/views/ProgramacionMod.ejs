    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
    <title>Programacion</title>
</head>
<body>
    <div class="container">

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
              <a class="navbar-brand" href="/">Visualizacion</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                  <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/Configuracion">Configuracion</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/Programacion">Programacion</a>
                  </li>
                </ul>
              </div>
            </div>
          </nav>
        <div class="text-center"><h1>Programacion</h1></div>
        <div id="DataSelector">
            <div class="row p-md-5">
                <h2>Modificar programaci√≥n</h2>


                <form class="row g-3 needs-validation" novalidate>

                    <h4>Partido</h4>
                    <div class="col-md-5">
                        <label for="Players" class="form-label">Equipo A</label>
                        <div id="Equipo-A-Select">
                                    
                        </div>
                        <div class="invalid-feedback">
                            Nombre Invalido
                        </div>
                    </div>
                    <div class="col-md-2 text-center p-4">
                        <h5>VS</h5>
                    </div>
                    <div class="col-md-5">
                        <label for="Players" class="form-label">Equipo B</label>
                        <div id="Equipo-B-Select">
                                    
                        </div>
                        <div class="invalid-feedback">
                            Nombre Invalido
                        </div>
                    </div>

                    <h4>Logistica</h4>
                    <div class="col-md-6">
                            <label for="TeamName" class="form-label">Estadio</label>
                            <div id="SelectPT">
                                    
                            </div>
                            <div class="invalid-feedback">
                                Equipo invalido
                            </div>
                    </div>      
        
                    <div class="col-md-6" id="ArbitroSelect">
                        <label for="Arbitros" class="form-label">Arbitro</label>
                        <div id="ArbitrosList">
                                
                        </div>

                        <div class="invalid-feedback">
                            Escoja un arbitro
                        </div>
                    </div>
                        <div class="col-md-6">
                        <label for="DateI" class="form-label">Fecha y hora</label>
                        <input type="text" id="DateI" class="form-control" /> 
                            <div class="invalid-feedback">
                                Escoja un entrenador
                            </div>
                        </div>
                    <div class="col-12">
                    <button id="SendProgramming" class="btn btn-primary" type="submit">Enviar</button>
                    <a class="btn btn-primary" href="/Programacion">Volver</a>
                    </div>

                </form>
            </div>
        </div>
        </div>
        
    </div>
    
    
    <script src="/socket.io/socket.io.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
